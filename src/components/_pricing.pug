            #amenities.box.box--highlighted.sp-top
                h3.box-title.box-title--soft
                    strong What's included
                    a.btn.btn-clear.sp-left(href="https://drive.google.com/open?id=0Bxb5rGPsTPoJNHVsaFIzem9hQTVoRHJpQmc4azZkTDdlZi00") #[i.fa.fa-map-o] View Floorplan
